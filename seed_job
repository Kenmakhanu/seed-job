job('Staging_job') {
   description('This is deployment to staging environment')
  
  scm {
        github('Kenmakhanu/maven-web-app', 'master')
   
    }
  
  logRotator {
        daysToKeep(5)
        numToKeep(5)
        artifactNumToKeep(5)
    }
  steps {
    
        maven {
            mavenInstallation('Maven 3.6.3') 
            goals('clean')
            goals('package')
            properties(skipTests: true) 
            localRepository(LocalRepositoryLocation.LOCAL_TO_WORKSPACE)  
           
        }
    }
  
  publishers {
        archiveArtifacts {
            pattern('**/*.war')
            onlyIfSuccessful()
        }
    }
}

job('Production_job') {
   description('This is deployment to production environment')
  
  scm {
        github('Kenmakhanu/maven-web-app', 'master')
   
    }
  
  logRotator {
        daysToKeep(5)
        numToKeep(5)
        artifactNumToKeep(5)
    }
  steps {
    
        maven {
            mavenInstallation('Maven 3.6.3')  
            goals('clean')
            goals('package')
            properties(skipTests: true)  
            localRepository(LocalRepositoryLocation.LOCAL_TO_WORKSPACE)            
           
        }
    }
  
  publishers {
        archiveArtifacts {
            pattern('**/*.war')
            onlyIfSuccessful()
        }
    }
}
